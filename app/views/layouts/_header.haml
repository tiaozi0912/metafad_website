:javascript

  $(document).ready(function(){
    $('#sign-in.btn').click(function(){
      $('#sign-in-modal').modal();
    });

  });

#header
  .header-container.relativePosition
    %a{:href=>"/"}
      %img#brand{:src=>"/images/logo.png",:alt => "logo"}
    .right-text.pull-right
      - if !cookies.signed[:page].nil?
        - if current_user.nil?
          -#%b
            %a#sign-in Sign In 
          - if is_consumer?
            %a#identity{:href=>"/retailers"}I'm a retailer
          - else
            %a#identity{:href=>"/consumers"}I'm a user
        - else
          #user-info-container.dropdown
            .user-profile-photo.small
              %img{:src =>"#{current_user.photo.url(:small)}"}
            %a.dropdown-toggle{:href=>"/users/#{current_user.id}",:"data-toggle"=>"dropdown",:"data-target"=>"#"}
              #{current_user.user_name}
              %b.caret
            %ul.dropdown-menu.pull-right#menu{:role=>"menu",:"aria-labelledby"=>"dLabel"}
              %li 
                %a{:href=>"#",:tabindex=>"-1"} Settings
              %li
                %a{:href=>"/signout",:tabindex=>"-1"} Logout
              

= render :partial=>"sessions/signin"  